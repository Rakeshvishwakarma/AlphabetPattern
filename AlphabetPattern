class Pattern{
    public static void charPattern(int n){
        int i = 1;
        while (i <= n){
            int j = 1;
            while (j <= i){
                char a= (char) ('A' + j - 1 ); // Type casting of values from INT A(65) //value to Charachter A 
                System.out.print(a);
                j += 1;
                System.out.print(" ");
            }
            System.out.println(" ");
            i += 1;
        }
    }
    public static void main(String[] args){
        int n = 3;
        charPattern(n);
    }
}

//output:
// A 
// A B
// A B C
